<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <android.support.v7.widget.Toolbar
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:title="Recuperar senha"
        app:titleTextColor="@android:color/black"
        android:id="@+id/toolbar_title"/>
    <android.support.design.widget.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="13dp"
        android:layout_marginTop="30dp"
        android:layout_marginBottom="10dp"
        android:layout_centerInParent="true"
        android:id="@+id/view_edt_text_email"
        android:layout_below="@id/toolbar_title">
        <EditText
            android:id="@+id/edt_email_recuperar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="E-mail da conta"/>
    </android.support.design.widget.TextInputLayout>
<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_below="@id/view_edt_text_email"
    android:padding="13dp">
    <Button
        android:id="@+id/button_recuperar_senha"

        android:layout_marginTop="5dp"
        android:layout_alignParentRight="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Recuperar"
        android:background="@drawable/shape_button_entrar"
        android:textColor="@android:color/white"
        android:textStyle="bold"
        android:textAllCaps="false"
        android:textSize="15dp"/>
    <Button
        android:id="@+id/button_cancelar"
        android:layout_margin="10dp"
        android:layout_marginTop="5dp"
        android:layout_toLeftOf="@id/button_recuperar_senha"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Cancelar"
        android:background="@android:color/transparent"
        android:textColor="@color/colorPrimary"
        android:textStyle="bold"
        android:textAllCaps="false"
        android:textSize="15dp"/>
</RelativeLayout>

</RelativeLayout>