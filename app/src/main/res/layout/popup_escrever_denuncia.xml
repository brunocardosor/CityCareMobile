<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_centerHorizontal="true"
    android:background="@android:color/transparent"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="5dp">

        <android.support.design.widget.FloatingActionButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_margin="5dp"
            app:backgroundTint="@color/colorPrimaryDark"
            app:elevation="3dp" />

        <android.support.v7.widget.CardView
            android:id="@+id/card_escrever_denuncia"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="20dp"
            app:cardCornerRadius="10dp">

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <android.support.v7.widget.Toolbar
                    android:id="@+id/toolbar_categoria"
                    android:layout_width="match_parent"
                    android:layout_height="?attr/actionBarSize">

                    <Spinner
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginRight="19dp" />
                </android.support.v7.widget.Toolbar>

                <ScrollView
                    android:id="@+id/relative_lay_edt_descricao"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/toolbar_categoria">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="250dp"
                        android:background="@android:drawable/editbox_background">

                        <EditText
                            android:id="@+id/edt_descricao_denuncia"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="5dp"
                            android:layout_marginRight="5dp"
                            android:background="?attr/editTextColor"
                            android:hint="Conte-nos o que está havendo..."
                            android:textColor="@android:color/black" />

                        <ImageView
                            android:id="@+id/imagem_denuncia"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/edt_descricao_denuncia" />
                    </RelativeLayout>
                </ScrollView>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="?attr/actionBarSize"
                    android:layout_below="@+id/relative_lay_edt_descricao"
                    android:layout_marginLeft="10dp">

                    <android.support.design.widget.FloatingActionButton
                        android:id="@+id/bt_camera"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="5dp"
                        android:src="@drawable/ic_camera"
                        app:backgroundTint="@color/colorAscend"
                        app:elevation="0dp" />

                    <android.support.design.widget.FloatingActionButton
                        android:id="@+id/bt_galeria"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="5dp"
                        android:layout_toRightOf="@id/bt_camera"
                        android:src="@drawable/ic_galery"
                        app:backgroundTint="@color/colorAscend"
                        app:elevation="0dp" />

                    <Button
                        android:layout_width="90dp"
                        android:layout_height="30dp"
                        android:layout_centerVertical="true"
                        android:layout_toRightOf="@id/bt_galeria"
                        android:background="@drawable/shape_location_button"
                        android:text="Localização..."
                        android:textAllCaps="false"
                        android:textColor="@android:color/white"
                        android:textSize="5pt" />
                    <!--android:drawableLeft="@drawable/ic_place"-->
                    <Button
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:background="@android:color/transparent"
                        android:text="Enviar"
                        android:textAllCaps="false"
                        android:textColor="@color/colorPrimary" />
                </RelativeLayout>
            </RelativeLayout>
        </android.support.v7.widget.CardView>
    </RelativeLayout>
</LinearLayout>