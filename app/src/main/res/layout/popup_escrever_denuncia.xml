<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:background="#6acdcdcd"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="15dp">

        <android.support.design.widget.FloatingActionButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_margin="5dp"
            app:elevation="3dp"
            android:backgroundTint="@color/colorPrimaryDark" />

        <android.support.v7.widget.CardView
            android:id="@+id/card_escrever_denuncia"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="20dp"
            app:cardCornerRadius="10dp">

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <android.support.v7.widget.Toolbar
                    android:id="@+id/toolbar_categoria"
                    android:layout_width="match_parent"
                    android:layout_height="?attr/actionBarSize">

                    <Spinner
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginRight="19dp" />
                </android.support.v7.widget.Toolbar>

                <RelativeLayout
                    android:id="@+id/relative_lay_edt_descricao"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/toolbar_categoria">

                    <EditText
                        android:id="@+id/edt_descricao_denuncia"
                        android:layout_width="match_parent"
                        android:layout_height="250dp"
                        android:layout_marginRight="5dp"
                        android:layout_marginLeft="5dp"
                        android:background="@android:drawable/editbox_background" />

                    <ImageView
                        android:id="@+id/imagem_denuncia"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="?attr/actionBarSize"
                    android:layout_below="@+id/relative_lay_edt_descricao"
                    android:layout_marginLeft="10dp">

                            <android.support.design.widget.FloatingActionButton
                                android:layout_width="30dp"
                                android:layout_height="30dp"
                                app:elevation="0dp"
                                android:layout_centerVertical="true"
                                android:src="@drawable/ic_camera"
                                android:id="@+id/bt_camera"
                                android:layout_marginRight="5dp"
                                android:backgroundTint="@color/colorAscend"
                                />
                            <android.support.design.widget.FloatingActionButton
                                android:layout_width="30dp"
                                android:layout_height="30dp"
                                app:elevation="0dp"
                                android:layout_centerVertical="true"
                                android:src="@drawable/ic_galery"
                                android:layout_toRightOf="@id/bt_camera"
                                android:layout_marginRight="5dp"
                                android:id="@+id/bt_galeria"
                                android:backgroundTint="@color/colorAscend"
                                />

                            <Button
                                android:layout_width="wrap_content"
                                android:layout_height="30dp"
                                android:background="@drawable/shape_location_button"
                                android:layout_centerVertical="true"
                                android:layout_toRightOf="@id/bt_galeria"
                                android:text="Localização..."
                                android:textColor="@android:color/white"
                                android:textAllCaps="false"
                                android:textSize="5pt"/>
                                <!--android:drawableLeft="@drawable/ic_place"-->
                            <Button
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Enviar"
                                android:textAllCaps="false"
                                android:layout_alignParentRight="true"
                                android:textColor="@color/colorPrimary"
                                android:layout_centerVertical="true"
                                android:background="@android:color/transparent"
                                />
                </RelativeLayout>
            </RelativeLayout>
        </android.support.v7.widget.CardView>
    </RelativeLayout>
</LinearLayout>