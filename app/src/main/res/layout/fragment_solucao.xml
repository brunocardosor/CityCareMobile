<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_margin="10dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:layout_marginTop="15dp">

            <LinearLayout
                android:id="@+id/linear_profile_solucao"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <!--Foto de perfil do usuário-->
                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/pic_profile_solucao"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_gravity="center_vertical"
                    android:src="@android:color/darker_gray"/>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginLeft="15dp"
                    android:gravity="center_vertical"
                    android:orientation="vertical">
                    <!--Nome do usuário que fez a denúncia-->
                    <TextView
                        android:id="@+id/name_profile_solucao"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@android:color/black"
                        android:textSize="7pt"
                        android:textStyle="bold"/>
                    <!--Tempo no qual a postagem foi enviada-->
                    <TextView
                        android:id="@+id/time_solucao"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        />
                </LinearLayout>
            </LinearLayout>

            <!--Descricao da denúncia-->
            <TextView
                android:id="@+id/descricao_solucao"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/linear_profile_solucao"
                android:layout_marginTop="10dp"
                android:textColor="@android:color/black"
                android:textSize="17dp" />
            <!--ImageView da foto da denúncia-->
            <ImageView
                android:id="@+id/denuncia_picture_solucao"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/descricao_solucao"
                android:layout_marginBottom="20dp"
                android:layout_marginTop="20dp"
                android:adjustViewBounds="true"
                android:scaleType="centerCrop" />

        </RelativeLayout>
    </RelativeLayout>
</RelativeLayout>