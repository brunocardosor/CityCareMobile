<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="15dp"
    android:orientation="vertical">


            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="15dp">

                        <LinearLayout
                            android:id="@+id/linear_profile_post"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">
                            <!--Foto de perfil do usuário-->
                            <de.hdodenhof.circleimageview.CircleImageView
                                android:id="@+id/pic_profile_post"
                                android:layout_width="40dp"
                                android:layout_height="40dp"
                                android:layout_gravity="center_vertical"
                                />

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:layout_marginLeft="15dp"
                                android:gravity="center_vertical"
                                android:orientation="vertical">
                                <!--Nome do usuário que fez a denúncia-->
                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:id="@+id/name_profile_post"
                                    android:textColor="@android:color/black"
                                    android:textSize="7pt" />
                                <!--Tempo no qual a postagem foi enviada-->
                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:id="@+id/time_post" />
                            </LinearLayout>
                        </LinearLayout>

                        <android.support.v7.widget.Toolbar
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"
                            android:id="@+id/toolbar_post_menu"/>
                        <!--Descricao da denúncia-->
                        <TextView
                            android:id="@+id/descricao_post"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/linear_profile_post"
                            android:layout_marginTop="14dp"
                            android:textColor="@android:color/black" />
                        <!--Layout da localização da denúncia-->
                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/descricao_post"
                            android:layout_marginTop="5dp"
                            android:orientation="horizontal">

                            <ImageView
                                android:layout_width="14dp"
                                android:layout_height="14dp"
                                android:src="@drawable/ic_place" />
                            <!--Texto com o endereço da denúncia-->
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:id="@+id/localizacao_post" />
                        </LinearLayout>
                    </RelativeLayout>
                    <!--Categoria da denúncia-->
                    <TextView
                        android:id="@+id/categoria_post"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:background="#0099DF"
                        android:gravity="center"
                        android:padding="5dp"
                        android:textColor="@android:color/white"
                        android:textSize="17dp"
                        android:textStyle="bold" />
                    <!--ImageView da foto da denúncia-->
                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:adjustViewBounds="true"
                        android:scaleType="centerCrop"
                        android:id="@+id/denuncia_picture_post"
                        />

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="15dp"
                        android:orientation="horizontal">
                        <!--Botão de compartilhamento de denúncia-->
                        <ImageButton
                            android:id="@+id/bt_agilizar_post"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:background="@android:color/transparent"
                            android:src="@drawable/ic_action_agiliza"/>
                        <!--Botão para ação de agiliza-->
                        <ImageButton
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:layout_marginLeft="15dp"
                            android:background="@android:color/transparent"
                            android:src="@drawable/ic_action_share"
                            android:id="@+id/bt_share_post"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:layout_marginLeft="10dp"
                            android:layout_marginRight="10dp"
                            android:background="@android:color/transparent"
                            android:lines="1"
                            android:textColor="@android:color/darker_gray"
                            android:id="@+id/status_post"/>
                    </LinearLayout>
                </LinearLayout>
            </android.support.v7.widget.CardView>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@android:color/white"
                android:orientation="horizontal">

                <de.hdodenhof.circleimageview.CircleImageView
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_margin="15dp"
                    android:id="@+id/pic_profile_comentario"/>
                <!--Caixa de texto para digitar comentário-->
                <EditText
                    android:id="@+id/edt_comentario"
                    android:layout_width="175dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="bottom"
                    android:layout_marginBottom="9dp"
                    android:background="@android:color/white"
                    android:hint="Faça um comentário"
                    android:textColor="@color/cardview_light_background"
                    />
                <!--Botão de envio de comentário-->
                <ImageButton
                    android:id="@+id/bt_enviar_comentario"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="bottom"
                    android:layout_marginBottom="22.5dp"
                    android:layout_marginLeft="15dp"
                    android:background="@android:color/transparent"
                    android:src="@drawable/ic_action_send" />
            </LinearLayout>
</LinearLayout>
